<div class="NewPost">
	<% if @current_user %>
		<div class="newPost">
			<h1 style="font-family: 'Brush Script MT';">New Post</h1>
			<form method="POST" enctype="multipart/form-data" action="/newpost" class="NewPostForm">
				
				<input type="file" name="photo" />
				<textarea style="width: 220px;" name="message" placeholder="What's on your mind <%= current_user.name %> ?"></textarea>
				<input class="NewPostButton" type="submit" value="Post">
			</form>
		</div>
	<% end %>
</div>
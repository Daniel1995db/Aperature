<%= erb :nav %>
<!-- Profile Page -->
<% if @current_user %>
	<%# @users.each do |user| %>
		<h1><%= user.name %> <%= user.last %></h1>
		<img class="profileImage" src="<%= user.photo.url %>" />

		<div class="profileCredentials">
			<h3>Profile</h3>
			<ul>
				<li>Username: <%= user.username %></li>
				<li>Occupancy: <%= user.occupancy %></li>
				<li>Relationship: <%= user.relationship %></li>
			</ul>
		</div>

		<%= erb :newpost %>

		<div class="currentPost">
			<h2>Recent Posts</h2>
			<% user.posts.each do |post| %>
			<img src="<%= post.photo.url %>" />
			<%= post.datetime.strftime("%I:%M%p") %>
			<%= post.message %>

			<div class="comments1">
				<h4>Comments</h4>
				<% post.comments.each do |comment| %>
					<%= comment.message %>
				<% end %>
				<%= erb :comment, locals: {post: post} %>
			</div>


			<% end %>
		</div>
	<%# end %>

	
	
	<!-- <form method="POST" action="/deleteaccountpage"> 
		<input type="submit" value="Delete Account">
	</form> -->

<% end %>
